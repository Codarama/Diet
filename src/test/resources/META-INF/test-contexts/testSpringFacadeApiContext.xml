<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util.xsd">
		
		<import resource="classpath:META-INF/common.xml"/>
		
		<bean id="workDir" class="java.lang.String" factory-method="valueOf">
			<constructor-arg value="${jar.compaction.dir}" type="java.lang.Object"/>
		</bean>
		
		<bean id="resolverStatusUpdateEventBus" class="com.google.common.eventbus.EventBus"/>
		
		<bean id="parentResolver" class="net.ayld.facade.component.ListenableComponent" abstract="true">
			<property name="eventBus" ref="resolverStatusUpdateEventBus"/>
		</bean>
		
		<bean id="classDependencyResolver" class="net.ayld.facade.dependency.resolver.impl.ManualBinaryParseClassDependencyResolver" parent="parentResolver"/>
		<bean id="sourceDependencyResolver" class="net.ayld.facade.dependency.resolver.impl.ManualParseSourceDependencyResolver" parent="parentResolver"/>
		
		<bean id="jarExploder" class="net.ayld.facade.bundle.impl.ManualJarExploder">
			<property name="workDir" value="#{workDir}"/>
		</bean>
		<bean id="jarMaker" class="net.ayld.facade.bundle.impl.ManualJarMaker">
			<property name="zippedJarName" value="#{workDir.concat('/facade.jar')}"/>
		</bean>
		
		<bean id="assertionExploder" class="net.ayld.facade.bundle.impl.ManualJarExploder">
			<property name="workDir" value="#{workDir.concat('/assert')}"/>
		</bean>
		
		<bean id="facadeApi" class="net.ayld.facade.api.impl.SpringFacadeApi">
			<property name="dependencyMatcherStrategy">
				<bean class="net.ayld.facade.dependency.matcher.impl.UnanimousBasedDependencyMatcherStrategy">
					<property name="conditions">
						<set>
							<bean class="net.ayld.facade.dependency.matcher.condition.impl.BinaryClassNameVsDependencyQualifiedName"/>
							<bean class="net.ayld.facade.dependency.matcher.condition.impl.ClassnamePackagesVsClassfilePath"/>
							<bean class="net.ayld.facade.dependency.matcher.condition.impl.ClassShortNameVsClassFilename"/>
						</set>
					</property>
				</bean>
			</property>
			<property name="classDependencyResolver" ref="classDependencyResolver"/>
			<property name="sourceDependencyResolver" ref="sourceDependencyResolver"/>
			<property name="jarExploder" ref="jarExploder"/>
			<property name="jarMaker" ref="jarMaker"/>
			<property name="libExtractDir" ref="workDir"/>
		</bean>
		
</beans>