<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util.xsd">
		
		<import resource="classpath:META-INF/common.xml" />
		
		<bean id="workDir" class="java.lang.String" factory-method="valueOf">
			<constructor-arg value="${jar.extraction.dir}" type="java.lang.Object"/>
		</bean>
		
		<bean id="compactionDir" class="java.lang.String" factory-method="valueOf">
			<constructor-arg value="${jar.compaction.dir}" type="java.lang.Object"/>
		</bean>
				
		<bean id="optimize" class="net.ayld.facade.ui.console.command.impl.Optimize">
	    	<property name="bundleResolver" ref="bundleResolver"/>
	    	<property name="dependencyResolver" ref="dependencyResolver"/>
	    	<property name="jarExploader" ref="jarExploder"/>
	    	<property name="jarMaker" ref="jarMaker"/>
	    </bean>
	    
	    <bean id="dependencyResolver" class="net.ayld.facade.dependency.resolver.impl.ManualSourceParseClassDependencyResolver"/>
	    
	    <bean id="bundleResolver" class="net.ayld.facade.dependency.resolver.impl.ManualDependencyBundleResolver">
			<property name="jarExploder" ref="jarExploder"/>
			<property name="dependencyMatcher">
				<bean class="net.ayld.facade.dependency.matcher.impl.UnanimousBasedDependencyMatcherStrategy">
					<property name="conditions">
						<util:set>
							<bean class="net.ayld.facade.dependency.matcher.condition.impl.ClassShortNameVsClassFilename"/>
							<bean class="net.ayld.facade.dependency.matcher.condition.impl.ClassnamePackagesVsClassfilePath"/>
						</util:set>
					</property>
				</bean>
			</property>
		</bean>
		
		<bean id="jarExploder" class="net.ayld.facade.bundle.impl.ManualJarExploder">
			<property name="workDir" value="#{workDir}"/>
		</bean>
		
		<bean id="jarMaker" class="net.ayld.facade.bundle.impl.ManualJarMaker">
			<property name="zippedJarName" value="#{compactionDir.concat('/facade.jar')}"/>
		</bean>
</beans>