<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util.xsd">
		
		<import resource="classpath:META-INF/common.xml" />
		
		<bean id="jarExploder" class="org.codarama.diet.bundle.impl.ManualJarExploder">
			<property name="workDir" value="#{workDir}"/>
			<property name="eventBus">
				<bean class="com.google.common.eventbus.EventBus"/>
			</property>
		</bean>
		
		<bean id="bundleResolver" class="org.codarama.diet.dependency.resolver.impl.ManualDependencyBundleResolver">
			<property name="jarExploder" ref="jarExploder"/>
			<property name="dependencyMatcher">
				<bean class="org.codarama.diet.dependency.matcher.impl.UnanimousBasedDependencyMatcherStrategy">
					<property name="conditions">
						<util:set>
							<bean class="org.codarama.diet.dependency.matcher.condition.impl.ClassShortNameVsClassFilename"/>
							<bean class="org.codarama.diet.dependency.matcher.condition.impl.ClassnamePackagesVsClassfilePath"/>
						</util:set>
					</property>
				</bean>
			</property>
		</bean>
		
</beans>