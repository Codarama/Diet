<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util.xsd">
		
		<bean id="classDependencyResolver" class="org.codarama.diet.dependency.resolver.impl.ManualBinaryParseClassDependencyResolver" parent="listenableComponent"/>
		<bean id="sourceDependencyResolver" class="org.codarama.diet.dependency.resolver.impl.ManualParseSourceDependencyResolver" parent="listenableComponent"/>
		
		<bean id="jarExploder" class="org.codarama.diet.bundle.impl.ManualJarExploder" parent="listenableComponent">
			<property name="workDir" value="#{workDir}"/>
		</bean>
		
		<bean id="explicitJarExploder" class="org.codarama.diet.bundle.impl.ManualJarExploder" parent="listenableComponent">
			<property name="workDir" value="#{mandatoryWorkDir}"/>
		</bean>
		
		<bean id="jarMaker" class="org.codarama.diet.bundle.impl.ManualJarMaker">
			<property name="zippedJarName" value="#{defaultOutJar}"/>
		</bean>
		
		<bean id="unanimousMatcher" class="org.codarama.diet.dependency.matcher.impl.UnanimousBasedDependencyMatcherStrategy">
			<property name="conditions">
				<set>
					<bean class="org.codarama.diet.dependency.matcher.condition.impl.BinaryClassNameVsDependencyQualifiedName"/>
					<bean class="org.codarama.diet.dependency.matcher.condition.impl.ClassnamePackagesVsClassfilePath"/>
					<bean class="org.codarama.diet.dependency.matcher.condition.impl.ClassShortNameVsClassFilename"/>
				</set>
			</property>
		</bean>

        <bean id="bcelMinimizationStrategy" class="org.codarama.diet.minimization.impl.BcelMinimizationStrategy">
            <property name="dependencyMatcherStrategy" ref="unanimousMatcher"/>
            <property name="sourceDependencyResolver" ref="sourceDependencyResolver"/>
            <property name="classDependencyResolver" ref="classDependencyResolver"/>
            <property name="libJarExploder" ref="explicitJarExploder"/>
            <property name="fileFinder">
                <bean class="org.codarama.diet.util.Files" factory-method="in">
                    <constructor-arg type="java.lang.String" ref="workDir"/>
                </bean>
            </property>
        </bean>
</beans>