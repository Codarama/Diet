<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util.xsd">
		
		<bean id="classDependencyResolver" class="net.ayld.diet.dependency.resolver.impl.ManualBinaryParseClassDependencyResolver" parent="parentListenableComponent"/>
		<bean id="sourceDependencyResolver" class="net.ayld.diet.dependency.resolver.impl.ManualParseSourceDependencyResolver" parent="parentListenableComponent"/>
		
		<bean id="jarExploder" class="net.ayld.diet.bundle.impl.ManualJarExploder" parent="parentListenableComponent">
			<property name="workDir" value="#{workDir}"/>
		</bean>
		
		<bean id="explicitJarExploder" class="net.ayld.diet.bundle.impl.ManualJarExploder" parent="parentListenableComponent">
			<property name="workDir" value="#{mandatoryWorkDir}"/>
		</bean>
		
		<bean id="jarMaker" class="net.ayld.diet.bundle.impl.ManualJarMaker">
			<property name="zippedJarName" value="#{defaultOutJar}"/>
		</bean>
		
		<bean id="unanimousMatcher" class="net.ayld.diet.dependency.matcher.impl.UnanimousBasedDependencyMatcherStrategy">
			<property name="conditions">
				<set>
					<bean class="net.ayld.diet.dependency.matcher.condition.impl.BinaryClassNameVsDependencyQualifiedName"/>
					<bean class="net.ayld.diet.dependency.matcher.condition.impl.ClassnamePackagesVsClassfilePath"/>
					<bean class="net.ayld.diet.dependency.matcher.condition.impl.ClassShortNameVsClassFilename"/>
				</set>
			</property>
		</bean>
</beans>